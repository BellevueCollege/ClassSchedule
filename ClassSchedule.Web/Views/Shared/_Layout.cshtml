<head>
	<title>@ViewBag.PageTitle</title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    @if (appUrl != null)
    {
        <meta class="swiftype" name="site_home_url" data-type="string" content="@appUrl" />
    }
    @RenderSection("metatags", false)
	<link rel="stylesheet" href="@Helpers.GlobalsHttp("c/g.css?ver=3.9")">
	<link rel="stylesheet" media="print" href="@Helpers.GlobalsHttp("c/p.css?ver=3.9")">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script type="text/javascript" src="@Helpers.GlobalsHttp("j/ghead-full.min.js")"></script>
	<link rel="stylesheet" id="open-sans-css" href="https://fonts.googleapis.com/css?family=Open+Sans%3A300italic%2C400italic%2C600italic%2C300%2C400%2C600&#038;subset=latin%2Clatin-ext&#038;ver=4.0.1" type="text/css" media="all" />

    @Html.Include(Server.MapPath(Helpers.GlobalsFile("h/gabranded.html")))
    <script type="text/javascript">
        // global values used by multiple client scripts
        var g_ajaxLoaderImgPath = "@Url.Content("~/Content/images/ajax-loader.gif")";
        var g_getSeatsUrl = "@Url.Action("GetSeats", "Api")";
        var g_updateCMSFootnoteUrl = "@Url.Action("UpdateSectionFootnote", "Api")";
        var g_searchRootUrl = "@Url.Action("Index", "Search")";
    </script>
    @RenderSection("PageScripts", false)
    <script type="text/javascript" src="@Url.Content("~/Content/js/CtcClassSchedule.js")?v=@ViewBag.Version"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.0/jquery-ui.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/jquery.unobtrusive-ajax.min.js")"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.9/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.0/themes/base/jquery-ui.min.css" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Content/js/classes.js")?v=@ViewBag.Version"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-timeago/1.5.4/jquery.timeago.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.10.0/jquery.timepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.10.0/jquery.timepicker.min.css" type="text/css" />

    <link rel="stylesheet" href="@Url.Content("~/Content/ClassSchedule.css")" type="text/css" />
</head>

<body class="nav-classes @(Helpers.GetBodyClasses(Context))">
    @Html.Include(Server.MapPath(Helpers.GlobalsFile("h/bhead.html")))
    <div id="main-wrap" class="globals-branded">
        <div id="main" class="container no-padding">
            <div class="content-padding">
                <div id="site-header">
                    <p class="site-title">
                        <!--  Header content  -->
                        <a href="@Url.Content("~/")">Classes</a>
                    </p><!-- container header -->
                </div>
            </div><!-- content-padding -->
            <div class="row">
                <div class="col-md-12">
                    <div class="box-shadow">
                        @RenderBody()

                        @(Html.Partial("Footer"))
                    </div>
				    <!-- #content-->
                </div>
                <!-- .col-md-12 -->
            </div>
            <!-- .row -->
        </div>
		<!-- #main .container -->
    </div>
	<!-- #main-wrap -->

    @Html.Include(Server.MapPath(Helpers.GlobalsFile("h/bfoot.html")))
    @Html.Include(Server.MapPath(Helpers.GlobalsFile("h/legal.html")))

    <script src="@Helpers.GlobalsHttp("j/bootstrap.min.js")"></script>
    <!--<script src="@Helpers.GlobalsHttp("j/g.js")"></script>-->
    @StackExchange.Profiling.MiniProfiler.RenderIncludes()
</body>
</html>